generator client {
   provider = "prisma-client-js"  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Apartment {
  id               Int      @id @default(autoincrement())
  unit_name        String   @db.VarChar(100)
  unit_number      String   @db.VarChar(20)
  unit_description String   @db.Text
  project          String   @db.VarChar(100)
  price            Int
  city             String   @db.VarChar(50)
  createdAt        DateTime @default(now())

  @@unique([project, unit_number], name: "unique_unit_per_project")
}